<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@mipmap/bg"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.dd.mylibrary.wedget.CircleImageView
            android:elevation="@dimen/dimen_5dp"
            android:layout_centerInParent="true"
            android:id="@+id/mImg_touxiang"
            android:src="@mipmap/touxiang"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp" />

        <TextView
            android:layout_below="@id/mImg_touxiang"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textStyle="bold"
            android:padding="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_16sp"
            android:id="@+id/mTxt_name"
            android:text="你的名字"
            android:gravity="center"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/laba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:elevation="@dimen/dimen_10dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:background="@drawable/shape_white_conner"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:elevation="@dimen/dimen_10dp"
                android:textSize="@dimen/dimen_14sp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/yinyue"
                android:drawablePadding="@dimen/dimen_10dp"
                android:text="音乐"
                android:id="@+id/mTxt_music1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/shipin"
                android:drawablePadding="@dimen/dimen_10dp"
                android:text="视频"
                android:id="@+id/mTxt_music2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/tupian"
                android:drawablePadding="@dimen/dimen_10dp"
                android:text="图片"
                android:id="@+id/mTxt_music3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>